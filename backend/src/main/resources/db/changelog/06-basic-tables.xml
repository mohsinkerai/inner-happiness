  <changeSet author="mohsin.kerai" id="06-01">
    <createTable remarks="Language Proficiency - Depends on Lanaguage, Will be used in Write, Read, Speak, Listen"
      tableName="language_proficiency">
      <column autoIncrement="true" name="id" type="bigint">
