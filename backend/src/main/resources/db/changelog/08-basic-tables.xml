<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="mohsin.kerai" id="08-01">
    <createTable remarks="Institution is the actual entity where positions and things are related to."
      tableName="institution">
      <column autoIncrement="true" name="id" type="bigint">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="level_id" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="updated_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="created_by" type="datetime">
        <constraints nullable="true" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="updated_by" type="datetime">
        <constraints nullable="true" unique="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet author="mohsin.kerai" id="06-02">
    <insert tableName="institution">
      <column name="name" value="Council for Pakistan"/>
      <column name="level_id" value="1"/>
    </insert>
    <insert tableName="institution">
      <column name="name" value="Economic Planning Board for Pakistan"/>
      <column name="level_id" value="1"/>
    </insert>
  </changeSet>
</databaseChangeLog>