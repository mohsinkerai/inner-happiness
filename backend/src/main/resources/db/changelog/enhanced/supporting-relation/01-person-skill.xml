<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet author="mohsin.kerai" id="person-skill-01">
    <createTable remarks="Person Skill Many to Many Relation"
      tableName="person_skill">
      <column autoIncrement="true" name="id" type="bigint">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>
      <column name="person_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="skill_id" type="bigint">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="updated_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="created_by" type="datetime">
        <constraints nullable="true" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="updated_by" type="datetime">
        <constraints nullable="true" unique="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="person-skill-03" author="mohsin.kerai">
    <addColumn tableName="person_skill">
      <column name="is_active" defaultValue="1" type="bit">
        <constraints nullable="false" />
      </column>
    </addColumn>
  </changeSet>
  <changeSet id="person-skill-04" author="mohsin.kerai">
    <dropColumn tableName="person_skill" columnName="created_by" />
    <dropColumn tableName="person_skill" columnName="updated_by" />
    <addColumn tableName="person_skill">
      <column name="created_by" type="varchar(255)" />
      <column name="updated_by" type="varchar(255)" />
    </addColumn>
  </changeSet>
</databaseChangeLog>