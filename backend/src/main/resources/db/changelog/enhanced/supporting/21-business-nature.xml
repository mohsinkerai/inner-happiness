<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="mohsin.kerai" id="business-nature-01">
    <createTable remarks="LOOKUP: List of Business Natures"
      tableName="business_nature">
      <column autoIncrement="true" name="id" type="bigint">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="updated_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="created_by" type="datetime">
        <constraints nullable="true" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="updated_by" type="datetime">
        <constraints nullable="true" unique="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="business-nature-02" author="mohsin.kerai">
    <addColumn tableName="business_nature">
      <column name="short_name" type="varchar(10)"/>
    </addColumn>
  </changeSet>
  <changeSet id="business-nature-03" author="mohsin.kerai">
    <addColumn tableName="business_nature">
      <column name="is_active" defaultValue="1" type="bit">
        <constraints nullable="false" />
      </column>
    </addColumn>
  </changeSet>
  <changeSet id="business-nature-04" author="mohsin.kerai">
    <sql>
      ALTER TABLE business_nature AUTO_INCREMENT = 10000;
    </sql>
  </changeSet>
  <changeSet id="business-nature-05" author="mohsin.kerai">
    <dropColumn tableName="business_nature" columnName="created_by" />
  </changeSet>
  <changeSet id="business-nature-06" author="mohsin.kerai">
    <dropColumn tableName="business_nature" columnName="updated_by" />
  </changeSet>
  <changeSet id="business-nature-07" author="mohsin.kerai">
    <addColumn tableName="business_nature">
      <column name="created_by" type="varchar(255)"></column>
    </addColumn>
  </changeSet>
  <changeSet id="business-nature-08" author="mohsin.kerai">
    <addColumn tableName="business_nature">
      <column name="updated_by" type="varchar(255)"></column>
    </addColumn>
  </changeSet>
  <changeSet id="business-nature-09" author="mohsin.kerai">
    <addColumn tableName="business_nature">
      <column name="short_code" type="varchar(255)"></column>
    </addColumn>
  </changeSet>
</databaseChangeLog>