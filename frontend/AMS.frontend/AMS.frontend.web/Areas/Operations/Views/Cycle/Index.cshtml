@model IEnumerable<AMS.frontend.web.Areas.Operations.Models.Cycle.CycleModel>
@{
    ViewBag.ModuleTitle = "All Cycles";
    ViewBag.PageTitle = "All Cycles";
}

@section styles{
    <link href="~/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}
<div class="m-portlet m-portlet--mobile" id="person-list-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <span class="m-portlet__head-icon">
                    <i class="flaticon-list-1"></i>
                </span>
                <h3 class="m-portlet__head-text">
                    Cycle Listing
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
            <ul class="m-portlet__nav">
                <li class="m-portlet__nav-item">
                    <a href="#" data-portlet-tool="toggle" class="m-portlet__nav-link m-portlet__nav-link--icon">
                        <i class="la la-angle-down"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="m-portlet__body">
        <div class="m-form m-form--label-align-left m--margin-bottom-20">
            <div class="row align-items-center">
                <div class="col-xl-12 order-1 order-xl-2 m--align-left">
                    <a asp-controller="Member" asp-action="Create" class="btn btn-primary">
                        <span>
                            <i class="la la-user-plus"></i>
                            <span>
                                Add New Cycle
                            </span>
                        </span>
                    </a>
                    <div class="m-separator m-separator--dashed d-xl-none"></div>
                </div>
            </div>
        </div>
        <table id="cycles" class="table table-striped- table-bordered table-hover">
            <thead>
                <tr>
                    <th> Cycle </th>
                    <th> Start Date </th>
                    <th> End Date </th>
                    <th> Actions </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.StartDateForDisplay</td>
                        <td>@item.EndDateForDisplay</td>
                        <td>
                            <button type="button" class="m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only" title="View">
                                <i class="la la-eye"></i>
                            </button>
                            <button type="button" class="m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only" title="Edit">
                                <i class="la la-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/assets/demo/default/custom/crud/datatables/extensions/buttons.js" type="text/javascript"></script>
    <script src="~/assets/demo/default/custom/crud/datatables/extensions/colreorder.js" type="text/javascript"></script>
    <script src="~/assets/demo/default/custom/crud/datatables/extensions/responsive.js" type="text/javascript"></script>
    <script src="~/assets/demo/default/custom/crud/datatables/data-sources/ajax-server-side.js" type="text/javascript"></script>

    <script type="text/javascript">
        jQuery(document).ready(function () {

            var x = document.getElementById("subHeader");
            x.style.display = "none";

        });
    </script>
}