@model IndexNominationModel
@{
    ViewBag.ModuleTitle = "Nominations Management";
    ViewBag.PageTitle = "Nominations";
}
@section styles{
    <link href="~/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

    <div class="m-portlet m-portlet--skin-dark m-portlet--bordered-semi" id="search-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon">
                        <i class="flaticon-users"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Position Lookup
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <a href="" data-portlet-tool="toggle" class="m-portlet__nav-link m-portlet__nav-link--icon">
                            <i class="la la-angle-down"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <form id="mainForm" asp-area="@AreaNames.Operations" asp-controller="@ControllerNames.Nominations" asp-action="@ActionNames.Index" method="post">
                <div class="form-group m-form__group row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="Company" class="control-label"></label>
                            <select asp-for="Company" asp-items="@ViewBag.CompanyList" class="form-control m-select2" placeholder="Select" disabled="disabled">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="Region" class="control-label"></label>
                            <select asp-for="Region" asp-items="@ViewBag.RegionList" class="form-control m-select2" placeholder="Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="Local" class="control-label"></label>
                            <select asp-for="Local" asp-items="@ViewBag.LocalList" class="form-control m-select2" placeholder="Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="Jamatkhana" class="control-label"></label>
                            <select asp-for="Jamatkhana" asp-items="@ViewBag.JamatkhanaList" class="form-control m-select2" placeholder="Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="Institution" class="control-label"></label>
                            <select asp-for="Institution" asp-items="@ViewBag.InstitutionList" class="form-control m-select2" placeholder="Select">
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <button type="submit" class="btn btn-primary btn-info">
                            <i class="fa fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

