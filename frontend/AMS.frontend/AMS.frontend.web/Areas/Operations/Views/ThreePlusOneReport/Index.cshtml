@model AMS.frontend.web.Areas.Operations.Models.ThreePlusOneReport.ThreePlusOneReportModel
@{
    ViewBag.ModuleTitle = "3+1 Report";
    ViewBag.PageTitle = "3+1 Report";
}

<div class="m-portlet m-portlet--bordered-semi" id="search-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <span class="m-portlet__head-icon">
                    <i class="flaticon-map"></i>
                </span>
                <h3 class="m-portlet__head-text">
                    3+1 Report
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
            <ul class="m-portlet__nav">
                <li class="m-portlet__nav-item">
                    <a href="" data-portlet-tool="toggle" class="m-portlet__nav-link m-portlet__nav-link--icon">
                        <i class="la la-angle-down"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="m-portlet__body">
        <form id="mainForm" asp-area="@AreaNames.Operations" asp-controller="@ControllerNames.ThreePlusOneReport" asp-action="GenerateReport" method="post">
            <div class="form-group m-form__group row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label asp-for="Level" class="control-label">Level</label>
                        <select asp-for="Level" class="form-control m-select2 level" placeholder="Select a Level">
                            <option></option>
                            <option value="National">National</option>
                            <option value="Regional">Regional</option>
                            <option value="Local">Local</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label">Category</label>
                        <select asp-for="Category" class="form-control m-select2 level" placeholder="Select a Category" disabled>
                            <option></option>
                            <option value="National">CAB</option>
                            <option value="Regional">ITREB</option>
                            <option value="Local">COUNCIL</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label asp-for="InstitutionName" class="control-label"></label>
                        <select asp-for="InstitutionName" class="form-control m-select2 institution" placeholder="Select" disabled="disabled">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label class="m-checkbox">
                            <input asp-for="comments" type="checkbox"> Show Comments
                            <span></span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                <div class="m-form__actions m-form__actions--solid m--align-right">
                    <!--<button type="button" class="btn btn-success" onclick="window.open('@Url.Action("GenerateReport", ControllerNames.ThreePlusOneReport)')">
                        <i class="fa fa-save"></i> Generate
                    </button>-->
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Generate
                    </button>
                    <a asp-area="@AreaNames.Operations" asp-controller="@ControllerNames.Persons" asp-action="@ActionNames.Index" class="btn default">
                        <i class="fa fa-close"></i> Cancel
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        jQuery(document).ready(function () {

            var x = document.getElementById("subHeader");
            x.style.display = "none";

            $(".level")
                .change(function () {
                    var selectedPrimaryValue = $(this).val();
                    if (selectedPrimaryValue === "" || selectedPrimaryValue === "0") {
                        $(".level").val([]);
                    }
                    $(".institution").empty().append("<option></option>").prop("disabled", true);
                    if (selectedPrimaryValue === "National") {
                        $(".institution").empty().append("<option></option>").prop("disabled", true);
                        //LoadNationalInstitutions();
                    } else if (selectedPrimaryValue === "Regional") {
                        $(".institution").empty().append("<option></option>").prop("disabled", true);
                        //LoadRegionalInstitutions();
                    } else if (selectedPrimaryValue === "Local") {
                        LoadLocalInstitutions();
                    }
                });
            
            function LoadNationalInstitutions() {
                LoadDropDownViaAjax("institution",
                "@Url.Action(ActionNames.GetNationalInstitutions, ControllerNames.ThreePlusOneReport, new {area = AreaNames.Operations})",
                "",
                "",
                "");

            }

            function LoadRegionalInstitutions() {
                LoadDropDownViaAjax("institution",
                "@Url.Action(ActionNames.GetRegionalInstitutions, ControllerNames.ThreePlusOneReport, new {area = AreaNames.Operations})",
                "",
                "",
                "");
            }

        function LoadLocalInstitutions() {
            LoadDropDownViaAjax("institution",
                "@Url.Action(ActionNames.GetLocalInstitutions, ControllerNames.ThreePlusOneReport, new {area = AreaNames.Operations})",
                "",
                "",
                "");
            }
        });
    </script>
}