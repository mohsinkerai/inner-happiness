@{
    Layout = null;
    ViewBag.Title = "Appointment Management System";
    ViewBag.PageTitle = "Login";
    var loginTitle = Model.RememberMe ? $"Hello {Model.Company}!" : "Login To Your Account";
    //ViewBag.DesktopHeader = "Fast Pay Backoffice";
    //ViewBag.MobileHeader = "Fast Pay";
}
