@model IEnumerable<VoluntaryCommunityModel>
<table id="voluntary-community" class="table table-striped- table-bordered table-hover">
    <thead>
        <tr>
            <th> Priority </th>
            <th> Imamat Appointee </th>
            <th> Institution </th>
            <th> From </th>
            <th> To </th>
            <th> Position </th>
            <th> Actions </th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                string rowColor = "";
                if (item.IsImamatAppointee)
                {
                    rowColor = "background-color:#f4da70; color:#000";
                }
                else
                {
                    rowColor = "";
                }

                <tr id="voluntary-community-row-@item.VoluntaryCommunityId" style="@rowColor">
                    <td> @item.Priority </td>
                    <td> @item.IsImamatAppointee </td>
                    <td> @item.InstitutionName </td>
                    <td> @item.FromYear </td>
                    <td> @item.ToYear </td>
                    <td> @item.PositionName </td>
                    <td>
                        <button type="button" class="m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only" title="Edit" onclick='return VoluntaryCommunityListEdit("@item.VoluntaryCommunityId", "@item.Institution-@item.InstitutionName", "@item.FromYear", "@item.ToYear", "@item.Position-@item.PositionName", "@item.Cycle");'>
                            <i class="la la-edit"></i>
                        </button>
                        <button type="button" class="m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only" title="Delete" onclick='return VoluntaryCommunityListDelete("@Url.Action(ActionNames.VoluntaryCommunityListDelete, ControllerNames.Persons, new {area = AreaNames.Operations})", "@item.VoluntaryCommunityId", "@Url.Action("ReorderVoluntaryCommunityService", ControllerNames.Persons, new {area = AreaNames.Operations})");'>
                            <i class="la la-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>